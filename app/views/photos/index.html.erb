<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<% if signed_in? %>
  <%= link_to "New Photo", new_photo_path, class: "btn btn-primary" %>
<% end %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <% if signed_in? %>
        <th>&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= link_to "Download Photo", photo.photo_url %></td>
        <% if signed_in? %>
          <td><%= button_to "Delete",  photo, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{photo.title}?" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

