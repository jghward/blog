<%= link_to "Photos", collections_url %> >> <%= @collection.title %>
<h1>
  <%= @collection.title %>
</h1>
<div class="album">
  <% @collection.albums.each do |a| -%>
    <% if a.has_cover? %>
        <% cover_url = Photo.find(a.cover_photo_id).photo.url(:albumcover) %>
        <%= link_to image_tag(cover_url), collection_album_path(@collection, a) %>
    <% end %>
    <h5>
      <%= link_to a.title, collection_album_path(@collection, a) %>
    </h5>
  <% end %>
</div>
<% if signed_in? %>
  <%= link_to "New Album", new_album_path, class: "btn btn-primary" %>

<% end %>
