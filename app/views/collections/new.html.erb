<% if !@collection.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @collection.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @collection, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :title %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
