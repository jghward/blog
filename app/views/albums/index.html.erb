<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Album", new_album_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% if signed_in? %>
        <th>&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album_path(album) %></td>
        <% if signed_in? %>
          <td><%= button_to "Delete",  album, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{album.title}?" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

